@{
    ViewData["Title"] = "Project Details";
    Layout = "_Layout";
}
<body>
    <div>
        <form class="form-horizontal">
            <div class="form-row">
                <div class="form-group col-md-6">

                    <label class="control-label col-sm-4" for="email">Project Name:</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">someone@example.com</p>
                    </div>
                    <label class="control-label col-sm-4" for="email">Project Manager:</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">someone@example.com</p>
                    </div>
                    <label class="control-label col-sm-4" for="email">Funded From:</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">someone@example.com</p>
                    </div>

                    <label class="control-label col-sm-4">Start Date:</label>
                    <div class="col-sm-8">
                        <input type="date" readonly class="form-control" id="inputPassword4">
                    </div>

                    <label class="control-label col-sm-4">Estimated End Date:</label>
                    <div class="col-sm-8">
                        <input type="date" readonly class="form-control" id="inputPassword4">
                    </div>

                    <label class="control-label col-sm-4">Project Description:</label>
                    <div class="col-sm-8">
                        <textarea readonly class="form-control rounded-0" id="exampleFormControlTextarea1" rows="5"></textarea>
                    </div>
                    <div class="form-row">
                        <label class="control-label col-md-4">Operational Costs:</label>

                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Budgeted:</label>
                            <p class="form-control-static">$1,000,000</p>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Quoted:</label>
                            <p class="form-control-static">$50,000</p>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Estimated:</label>
                            <p class="form-control-static">$40,000</p>
                        </div>
                    </div>                    
                    <div class="form-row">
                        <label class="control-label col-md-4">Capital Costs:</label>

                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Budgeted:</label>
                            <p class="form-control-static">$1,000,000</p>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Quoted:</label>
                            <p class="form-control-static">$50,000</p>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Estimated:</label>
                            <p class="form-control-static">$40,000</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="thumbnail" style="width:420px;height:470px">
                        <h4><strong>Estimated Cost:</strong></h4>
                        <hr />
                        <canvas id="pAssinged" width="320" height="300"></canvas>
                    </div>
                </div>
            </div>        
</form>
    </div>
</body>
<script>
    var ctx = document.getElementById("pAssinged");
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["Labor Costs", "Volunteer ", "Material ", "Actual Costs"],
            datasets: [{
                label: 'Labor Costs',
                label: 'Volunteer Hours',
                label: 'Material Costs',
                label: 'Actual Costs',
                data: [1, 3, 2, 1,],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>